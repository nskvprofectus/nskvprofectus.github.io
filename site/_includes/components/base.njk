<!doctype html>
<html lang="en">
  <head>
    {#import fonts#}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@800&family=Titillium+Web">
    <link href="/css/main.css" rel="stylesheet">

    {# include javascript#}
    <script src="/_js/main.js" type="module" defer></script>


    <link rel="icon" type="image/x-icon" href="/media/favicons/favicon.ico">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ meta_title if meta_title else title }} | {{site.name}}</title>
     {# page meta #}
    <meta name="description" content="{{ meta_description | truncate(140) if meta_description else content | striptags | truncate(140) }}">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  </head>
  <body 
    class=" bg-bg text-white flex-col"
  >
    <div class="bg-sports-pattern bg-pattern-size relative h-full flex flex-col min-h-screen z-10">
        {# header #}
        <div class=" bg-bg relative shrink-0 w-full z-20">
        {% include "components/header.njk" %}
        </div>
        {# content #}
        <div class="relative grow z-10">
          {{ content | safe }}
        </div>
        {# footer #}
        <div class="relative w-full shrink-0 z-0">
        {% include "components/footer.njk" %}
        </div>
    </div>

    <div class="sticky bottom-0 w-full z-10">
    {# include mobile nav #}
      {% include "components/mobile-nav.njk" %}
    </div>
  </body>
</html>