<!doctype html>
<html lang="en">
  <head>
    {#import fonts#}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@800&family=Titillium+Web:wght@600">
    <link href="css/main.css" rel="stylesheet">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ meta_title if meta_title else title }} | {{site.name}}</title>
     {# page meta #}
    <meta name="description" content="{{ meta_description | truncate(140) if meta_description else content | striptags | truncate(140) }}">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  </head>
  <body class="flex flex-col align-middle items-center h-screen bg-bg text-white justify-between">
    <div class="min-h-full">
      <div class="flex flex-col w-content justify-between"> 
        {% include "components/header.njk" %}
        
        <div>
          {{ content | safe }}
        </div>
      </div>
      <div class="absolute inset-x-0 bottom-0">
      {% include "components/footer.njk" %}

    </div>

  </body>
</html>