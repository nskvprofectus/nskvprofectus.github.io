
<div class="social-icons flex flex-row">

    {% for icon, link in site.social_links %}

        <a class="mx-2" href="{{ link | safe }}" target="_blank" rel="noreferrer noopener">
            <img
                src="/media/social_media_icons/{{ icon }}.svg"
                alt="{{ icon }}"
                height="20"
                width="20"
            />
        </a>

    {% endfor %}

</div>
